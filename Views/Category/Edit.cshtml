@model Category

@{
    ViewData["Title"] = "تعديل الفئة";
    Layout = "_LayoutDashboard";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-md-12">
            <div class="card shadow-sm">
                <div class="card-header bg-transparent border-0">
                    <h4 class="text-danger mb-0">
                        <i class="fas fa-edit me-2"></i>تعديل الفئة
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit">
                        <input type="hidden" asp-for="CategoryId" />
                        <div class="form-floating mb-3">
                            <input asp-for="Name" class="form-control" />
                            <label asp-for="Name" class="form-label">اسم الفئة</label>
                            <span asp-validation-for="Name" class="text-danger text-sm"></span>
                        </div>
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-save me-1"></i>حفظ التغييرات
                            </button>
                            <a asp-action="Index" class="btn btn-outline-danger">
                                <i class="fas fa-times me-1"></i>إلغاء
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>