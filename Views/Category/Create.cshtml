@model Category

@{
    ViewData["Title"] = "إضافة فئة";
    Layout = "_LayoutDashboard";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-transparent border-0">
                    <h4 class="text-danger mb-0">
                        <i class="fas fa-plus-circle me-2"></i>إضافة فئة جديدة
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group mb-3">
                            <label asp-for="Name" class="form-label text-danger">اسم الفئة</label>
                            <input asp-for="Name" class="form-control border-danger" placeholder="أدخل اسم الفئة" />
                            <span asp-validation-for="Name" class="text-danger text-sm"></span>
                        </div>
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-save me-1"></i>حفظ
                            </button>
                            <a asp-action="Index" class="btn btn-outline-danger">
                                <i class="fas fa-arrow-left me-1"></i>إلغاء
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>