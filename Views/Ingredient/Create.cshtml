@model Ingredient
@{
    ViewData["Title"] = "إضافة مكون";
}

<div class="container-fluid py-4">
    <div class="card shadow-lg">
        <div class="card-header bg-danger">
            <div class="row align-items-center">
                <div class="col-8">
                    <h3 class="text-white mb-0"><i class="bi bi-box-seam me-2"></i>@ViewData["Title"]</h3>
                </div>
                <div class="col-4 text-end">
                    <a asp-action="Index" class="btn btn-light btn-sm">
                        <i class="bi bi-arrow-left-circle me-2"></i>العودة
                    </a>
                </div>
            </div>
        </div>

        <div class="card-body">
            <form asp-action="Create" class="material-form">
                <div class="form-floating mb-4">
                    <input asp-for="Name" class="form-control material-input" placeholder=" " required>
                    <label asp-for="Name" class="material-label"></label>
                    <span asp-validation-for="Name" class="text-danger small mt-1 d-block"></span>
                </div>

                <div class="form-floating mb-4">
                    <input asp-for="ExtraPrice" type="number" step="0.01" 
                           class="form-control material-input" placeholder=" ">
                    <label asp-for="ExtraPrice" class="material-label"></label>
                </div>

                <div class="row g-3 mb-4">
                    <div class="col-md-4">
                        <div class="form-check form-switch">
                            <input asp-for="PrimaryStatus" class="form-check-input" type="checkbox">
                            <label asp-for="PrimaryStatus" class="form-check-label"></label>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-check form-switch">
                            <input asp-for="SubStatus" class="form-check-input" type="checkbox">
                            <label asp-for="SubStatus" class="form-check-label"></label>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-check form-switch">
                            <input asp-for="AdditionalStatus" class="form-check-input" type="checkbox">
                            <label asp-for="AdditionalStatus" class="form-check-label"></label>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-between">
                    <button type="reset" class="btn btn-outline-danger">
                        <i class="bi bi-x-circle me-2"></i>إلغاء
                    </button>
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-save me-2"></i>حفظ
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Styles {
<style>
    .form-switch .form-check-input {
        width: 3em;
        height: 1.5em;
    }

    .form-switch .form-check-label {
        margin-right: 1.5rem;
    }

    .form-check-input:checked {
        background-color: #dc3545;
        border-color: #dc3545;
    }
</style>
}