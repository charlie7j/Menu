<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Menu</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Menu.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Cust/Style.css" asp-append-version="true">
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-gradient  border-bottom box-shadow ">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Menu</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="MenuItem"
                                asp-action="Create">Create MenuItem</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="LiveMenu" asp-action="Index">Live
                                Menu</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid bg-Main">
        <main role="main" class="pb-3 ">
            <div class="row">
                <div class="col-2 pe-0 py-4">

                    <div class="bg-dark h-100 rounded-3 text-white text-start py-4 px-2">


                    <div class="p-3 d-flex justify-content-center align-items-center">
                        <img src="~/images4site/restaurant.png" style="width: 165px; height: 165px;" class="" >
                    </div>



                        <span class="fst-italic fw-bold"> - Ingredient</span>
                        <ul class="list-group list-group-flush">
                            <a asp-controller="Ingredient" asp-action="Create" class="Cust-list-group-item"> -
                                Create</a>
                            <a asp-controller="Ingredient" asp-action="Index" class="Cust-list-group-item"> - Index</a>
                        </ul>

                        <span class="fst-italic fw-bold"> - MenuItem</span>
                        <ul class="list-group list-group-flush">
                            <a asp-controller="MenuItem" asp-action="Create" class="Cust-list-group-item"> - Create</a>
                            <a asp-controller="MenuItem" asp-action="Index" class="Cust-list-group-item"> - Index</a>
                        </ul>

                        <span class="fst-italic fw-bold"> - Size</span>
                        <ul class="list-group list-group-flush">
                            <a asp-controller="Size" asp-action="Create" class="Cust-list-group-item"> - Create</a>
                            <a asp-controller="Size" asp-action="Index" class="Cust-list-group-item"> - Index</a>
                        </ul>

                        <span class="fst-italic fw-bold"> - Category</span>
                        <ul class="list-group list-group-flush">
                            <a asp-controller="Category" asp-action="Create" class="Cust-list-group-item"> - Create</a>
                            <a asp-controller="Category" asp-action="Index" class="Cust-list-group-item"> - Index</a>
                        </ul>



                    </div>
                </div>
                <div class="col-10 py-4 "> @RenderBody()</div>
            </div>
        </main>
    </div>





    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
