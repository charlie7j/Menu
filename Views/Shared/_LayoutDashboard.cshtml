<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Menu</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Menu.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Cust/Style.css" asp-append-version="true">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>

<body>
    
    <div class="container-fluid bg-Main">
        <main role="main" class="pb-3 ">
            <div class="row">
                <div class="col-2 pe-0 py-4">

                    <div class="bg-dark h-100 rounded-3 text-white text-start py-4 px-2">


                        <div class="p-3 d-flex justify-content-center align-items-center">
                            <img src="~/images4site/restaurant.png" style="width: 140px; height: 140px;" class="">
                        </div>



                        <span class="fst-italic fw-bold"> <i class="bi bi-dot"></i> Ingredient</span>
                        <ul class="list-group list-group-flush">
                            <a asp-controller="Ingredient" asp-action="Create" class="Cust-list-group-item"> <i
                                    class="bi bi-caret-right-fill"></i>
                                <i class="bi bi-columns-gap"></i> Create</a>
                            <a asp-controller="Ingredient" asp-action="Index" class="Cust-list-group-item"> <i
                                    class="bi bi-caret-right-fill"></i> <i class="bi bi-bar-chart-steps"></i> Index</a>
                        </ul>

                        <span class="fst-italic fw-bold"> <i class="bi bi-dot"></i> MenuItem</span>
                        <ul class="list-group list-group-flush">
                            <a asp-controller="MenuItem" asp-action="Create" class="Cust-list-group-item"> <i
                                    class="bi bi-caret-right-fill"></i> <i class="bi bi-cup-hot-fill"></i> Create</a>
                            <a asp-controller="MenuItem" asp-action="Index" class="Cust-list-group-item"> <i
                                    class="bi bi-caret-right-fill"></i> <i class="bi bi-grid-3x3-gap"></i> Index</a>
                        </ul>

                        <span class="fst-italic fw-bold"> <i class="bi bi-dot"></i> Size</span>
                        <ul class="list-group list-group-flush">
                            <a asp-controller="Size" asp-action="Create" class="Cust-list-group-item"> <i
                                    class="bi bi-caret-right-fill"></i> <i class="bi bi-view-stacked"></i> Create</a>
                            <a asp-controller="Size" asp-action="Index" class="Cust-list-group-item"> <i
                                    class="bi bi-caret-right-fill"></i> <i class="bi bi-ui-checks-grid"></i> Index</a>
                        </ul>

                        <span class="fst-italic fw-bold"> <i class="bi bi-dot"></i> Category</span>
                        <ul class="list-group list-group-flush">
                            <a asp-controller="Category" asp-action="Create" class="Cust-list-group-item"> <i
                                    class="bi bi-caret-right-fill"></i> <i class="bi bi-link"></i> Create</a>
                            <a asp-controller="Category" asp-action="Index" class="Cust-list-group-item"> <i
                                    class="bi bi-caret-right-fill"></i> <i class="bi bi-layout-wtf"></i> Index</a>
                        </ul>


                        <span class="fst-italic fw-bold"> <i class="bi bi-dot"></i> Orders</span>
                        <ul class="list-group list-group-flush">
                            <a asp-controller="Orders" asp-action="Create" class="Cust-list-group-item"> <i
                                    class="bi bi-caret-right-fill"></i> <i class="bi bi-cart-check"></i> Create</a>
                            <a asp-controller="Orders" asp-action="Index" class="Cust-list-group-item"> <i
                                    class="bi bi-caret-right-fill"></i> <i class="bi bi-border-style"></i> Index</a>
                        </ul>



                    </div>
                </div>
                <div class="col-10 py-4 "> @RenderBody()</div>
            </div>
        </main>
    </div>





    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
