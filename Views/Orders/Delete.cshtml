@model Order

@{
    ViewData["Title"] = "حذف الطلب";
    Layout = "_LayoutDashboard";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-transparent border-0">
                    <h4 class="text-danger mb-0">
                        <i class="bi bi-exclamation-triangle me-2"></i>تأكيد الحذف
                    </h4>
                </div>
                <div class="card-body text-center">
                    <h3 class="text-danger mb-4">هل أنت متأكد من رغبتك في حذف هذا الطلب؟</h3>
                    
                    <dl class="row text-start">
                        <dt class="col-sm-6">رقم الطلب:</dt>
                        <dd class="col-sm-6">@Model.OrderId</dd>
                        
                        <dt class="col-sm-6">رقم الطاولة:</dt>
                        <dd class="col-sm-6">@Model.TableNumber</dd>
                    </dl>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="OrderId" />
                        <button type="submit" class="btn btn-danger btn-lg">
                            <i class="bi bi-trash3 me-2"></i>نعم، احذف
                        </button>
                        <a asp-action="Index" class="btn btn-secondary btn-lg">
                            <i class="bi bi-arrow-return-left me-2"></i>تراجع
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>