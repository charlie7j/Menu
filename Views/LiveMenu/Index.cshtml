@model IEnumerable<Menu.Models.MenuItem>

@{
    ViewData["Title"] = "قائمة العناصر";
}

    <div class="container">
        <h1 class="text-center my-4">قائمة العناصر</h1>
        <div class="row">
            @foreach (var item in Model)
            {
            <div class="col-md-4 mb-4">
                
                <div class="card h-100">
                    <img src="@item.ImageUrl" class="card-img-top" alt="@item.Name" style="height: 200px; object-fit: cover;">
                    <div class="card-body">
                        <div class="accordion accordion-flush" id="accordionFlushExample">
                            <div class="accordion-item">
                                <strong>@item.Name</strong>
                                <strong>التصنيف:@item.Category?.Name </strong>
                                <p>@item.Description</p>
                            </div>
                        </div>
                        <p class="card-text text-center"><strong>السعر: </strong>@item.Price.ToString("C")</p>
                    </div>
                </div>

            </div>
            }
        </div>
    </div>